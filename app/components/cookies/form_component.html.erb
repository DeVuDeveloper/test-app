<%= simple_form_for [@oven, @cookie], html: { class: 'form-horizontal' } do |f| %>
  <%= form_error_notification(@cookie) %>
  <div class="form-group">
    <%= f.label :fillings, 'Fillings', class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.input :fillings, input_html: { class: 'form-control' } %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, 'Mix and bake', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>



