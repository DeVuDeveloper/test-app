<%= simple_form_for [oven, cookie], remote: true, html: { class: 'form-horizontal', id: 'cookie-form', 'data-controller': 'reload', 'data-action': 'turbo:submit-end->reload#afterSubmit', 'data-target': 'reload.form' } do |f| %>
  <%= form_error_notification(cookie) %>
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-4">Digital Oven</h3>
    <div class="flex items-center space-x-2">
      <div class="w-3 h-3 bg-green-400 rounded-full"></div>
      <p class="text-green-600 font-semibold">Online</p>
    </div>
  </div>
  <div class="bg-gray-100 p-4">
    <div class="bg-gray-300 rounded-lg p-4">
      <h4 class="text-lg font-semibold mb-2">Temperature Control</h4>
      <input type="range" min="0" max="500" class="block w-full h-2 bg-gray-200 rounded-full appearance-none">
    </div>

    <div class="bg-gray-300 rounded-lg mt-4 p-4">
    <div class="flex justify-between">
      <h4 class="text-lg font-semibold mb-2">Qty</h4>
      <div class="flex items-center">
        <%= f.number_field :quantity, class: "w-12 h-8 px-2 py-1 border rounded-lg mr-2" %>
      </div>
      <h4 class="text-lg font-semibold mb-2">Timer</h4>
      <div class="flex items-center">
        <%= f.number_field :cooking_time, class: "w-12 h-8 px-2 py-1 border rounded-lg mr-2" %>
        <p class="text-gray-600">sec</p>
      </div>
       </div>
      <div class="mt-2">
        <div class="h-2 bg-gray-200 rounded-full">
          <div class="h-full bg-green-500 rounded-full w-1/3"></div>
        </div>
        <p class="mt-2 text-green-600 font-semibold">Baking in progress</p>
      </div>
    </div>

       
   

    <div class="grid grid-cols-3 gap-2">
      <%= f.button :button, 'Chocolate', type: 'button', class: 'filling-button py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded transition duration-300 ease-in-out', data: { filling: 'chocolate' } %>
      <%= f.button :button, 'Strawberry', type: 'button', class: 'filling-button py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded transition duration-300 ease-in-out', data: { filling: 'strawberry' } %>
      <%= f.button :button, 'Vanilla', type: 'button', class: 'filling-button py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded transition duration-300 ease-in-out', data: { filling: 'vanilla' } %>
    </div>
    <%= f.hidden_field :fillings, id: "selected-filling" %>
  </div>

    <%= f.submit 'Start Baking', class: 'w-full mt-4 py-2 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded transition duration-300 ease-in-out' %>
    <div class="mt-4">
      <h4 class="text-lg font-semibold mb-2">Oven Status</h4>
      <div class="flex items-center">
        <p class="text-gray-600">Door:</p>
        <p class="ml-2 text-red-500 font-semibold">Closed</p>
      </div>
    </div>
  </div>
<% end %>


