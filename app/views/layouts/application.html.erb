<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title><%= content_for?(:title) ? yield(:title) : 'DigiBakery' %></title>
    <meta content="<%= content_for?(:description) ? yield(:description) : 'DigiBakery2' %>" name="description"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= side_load_stylesheets %>
  </head>

  <body>
 <%= turbo_stream_from "ovens" %>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main" class="container">
    
    <div id="flash" class="flash">
      <%= render "layouts/flash" %>
    </div>
    <%= yield %>
    </main>

    <%= side_load_javascripts type: 'module', defer: true %>
  </body>
</html>
