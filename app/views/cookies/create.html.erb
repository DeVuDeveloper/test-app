<% if @change.positive? %>
  <div class="mt-4">
    <p class="text-gray-100">Change to be returned: <%= number_to_currency(@change) %></p>
    <%= link_to 'Receive Change', receive_change_cookies_path(change: @change), method: :post, class: 'mt-2 py-1 px-4 bg-green-500 hover:bg-green-600 text-white font-semibold rounded transition duration-300 ease-in-out' %>
  </div>
<% end %>
