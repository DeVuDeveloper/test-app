<%= turbo_stream_from "ovens" %>
<h3><%= @oven.name %></h3>
<%= link_to "Prepare Cookie", new_oven_cooky_path(@oven), data: { turbo_frame: dom_id(Cookie.new) }, class: 'button' %>
<%= turbo_frame_tag dom_id(@oven, "cookie_info") do %>
  <%= render "cookie_info" %>
  <%= turbo_frame_tag Cookie.new %>
<% end %>
